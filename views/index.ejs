<%- include("partials/header") -%>

<!-- //////////////////// ENTRY PAGE /////////////////////////////// -->
<div class="py-0 splash">
  <div class="container">
    <div class="half-post-entry d-block d-lg-flex bg-light">
      <div class="img-bg" style="background-image: url('images/big_img_1.jpg')"></div>
      <div class="contents">
        <span class="caption">Editor's Pick</span>
        <h2><a href="blog-single.html">News Needs to Meet Its Audiences Where They Are</a></h2>
        <p class="mb-3">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptate vero obcaecati natus adipisci necessitatibus eius, enim vel sit ad reiciendis. Enim praesentium magni delectus cum, tempore deserunt aliquid quaerat culpa
          nemo veritatis, iste adipisci excepturi consectetur doloribus aliquam accusantium beatae?</p>

        <div class="post-meta">
          <span class="d-block">Dave Rogers</span>
          <span class="date-read">Jun 14</span>
        </div>

      </div>
    </div>
  </div>
</div>


<!-- //////////////////// RECENT BLOG PAGE /////////////////////////////// -->
<div class="site-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2>Recent Posts</h2>
        </div>

        <%for(let i = 0; i < 3; i++) {%>
          <%if(postToIndex[i] !== void(0)) {%>
            <div class="post-entry-2 d-flex">
              <div class="contents order-md-1 pl-0">
                <h2><a href=<%= "/posts/" + postToIndex[i]._id %>><%= postToIndex[i].title %></a></h2>
                <p class="mb-3"><%= postToIndex[i].content %></p>
                <div class="post-meta">
                  <span class="d-block"><%= postToIndex[i].poster %></span>
                  <span class="date-read"><%= convertingDateToIndex.convertDate(postToIndex[i].date) %></span>
                </div>
              </div>

              <div class="thumbnailpic thumbnail order-md-2" style="background-image: url('images/img_h_4.jpg')"></div>
            </div>
          <%}%>
        <%}%>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <ul class="custom-pagination list-unstyled">
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") -%>
